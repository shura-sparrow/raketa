.b-form
	margin 0 auto
	padding 0
	max-width 770px

	.b-form__label
		display table
		width 100%
		margin-bottom 10px

	.b-form__contacts .b-form__label:last-child
		margin-top 45px

	.b-form__input-outer
		display table-cell
		width 100%
		padding-left 17px
		vertical-align bottom

	.b-form__title
		font-size 22px
		font-weight bold
		display inline-block

	.b-form__title--mod
		display table-cell
		white-space nowrap
		vertical-align bottom
		padding-bottom 5px

	.b-form__input
		font-family "Courier New"
		font-size 30px
		line-height 44px
		color #231f20
		background transparent url(../images/line.png) 0 bottom repeat-x
		border 0
		width 100%
		padding-bottom 4px
		box-sizing border-box
		padding-left 15px

	.b-form__input-inner
		display inline-block
		vertical-align middle
		margin-right 24px

	.b-form__radio
	.b-form__checkbox
		display none

	.b-form__radio+label
	.b-form__checkbox+label
		display inline-block
		padding-left 33px
		cursor pointer
		&:before
			width 28px
			height 28px
			display inline-block
			sprite($radio)
			content ''
			vertical-align middle
			position relative
			top -2px
			margin-left -33px
			margin-right 5px

	.b-form__checkbox+label
		padding-left 30px
		&:before
			sprite($checkbox)
			width 25px
			height 28px
			background-repeat no-repeat
			margin-left -30px
			margin-right 4px
			vertical-align -4px

	.b-form__radio:not(:disabled):checked+label:before
		spritePosition($radio__sel)

	.b-form__checkbox:not(:disabled):checked+label:before
		spritePosition($checkbox__sel)


	.b-form__list-item
		margin-bottom 15px
		padding-right 10px

	.b-form__note
		font-size 14px
		color #3d3d3d
		line-height 1.57
		text-indent -1em
		padding-left 1.5em
		margin-bottom 30px

	.b-form__note__star
		font-size 36px;
		line-height 1
		position relative
		top 0.45em
		left: -0.23em

	.b-form__column
		width 33.3%
		float left

	.b-form__checkbox-title
		vertical-align middle

	.b-form__list
		overflow hidden

	.b-form__skills
		margin-top 50px
		margin-bottom 60px

